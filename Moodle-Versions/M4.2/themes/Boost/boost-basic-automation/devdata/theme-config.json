{
    "sitename": "Dream Theme",
    "description": [
        {
            "summary": "The project Dream Theme is about applying an automation process in modifying Moodle installed themes",
            "keywords": [
                "automation",
                "theme creation",
                "Moodle",
                "Robot Framework"
            ]
        }
    ],
    "colors": [
        {
            "$body-bg": "white",
            "$base-color": "#e83283",
            "$secondary-color": "#752347",
            "$nav-color": "#A2235B",
            "$amount-1": "20",
            "$amount-2": "40"
        }
    ],
    "css-classes": [
        {
            "secondary-navigation": [
                {
                    "border-top": "1px solid $base-color"
                }
            ],
            "navbar": [
                {
                    "box-shadow": "box-shadow: 0px 0px 12px -2px rgba(235,90,155,0.5) !important; text-transform:uppercase; color:$nav-color;",
                    "fixed-top": "box-shadow: 0px 0px 12px -2px rgba(235,90,155,0.5) !important; text-transform:uppercase; color:$nav-color;"
                }
            ],
            "pimary-navigation": "color:$nav-color !important;",
            "navigation": "color:$nav-color !important;",
            "navlink": "color:$nav-color !important;",
            "navlink-hover": "background-color:#fad6e6 !important;color: darken($base-color, $amount-1)",
            "navlink-focus": "background-color:#fad6e6 !important;color: darken($base-color, $amount-2);"
        }
    ]
}